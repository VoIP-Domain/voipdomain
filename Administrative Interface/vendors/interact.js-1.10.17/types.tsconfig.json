{
  "include": [
    "packages/@interactjs"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "skipLibCheck": true,

    "strict": false
  }
}
